<?xml version="1.0" encoding="utf-8"?>
<!-- MPD XML Enhanced main layout: summary, search, list (Portrait) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GBP Exchange Rates"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/lastUpdatedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last updated: --"
        android:textSize="14sp"
        android:paddingBottom="8dp" />

    <LinearLayout
        android:id="@+id/summaryRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/summaryUsd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="USD: --"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/summaryEur"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="EUR: --"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/summaryJpy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="JPY: --"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <EditText
            android:id="@+id/searchEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Search: name, code, or country"
            android:imeOptions="actionSearch"
            android:singleLine="true" />

        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search" />
    </LinearLayout>

    <Button
        android:id="@+id/refreshButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Refresh now" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ratesRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical" />

    <!-- Hidden debug TextView for raw XML if needed -->
    <TextView
        android:id="@+id/rawDataDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:visibility="gone" />

</LinearLayout>